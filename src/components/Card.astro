---
interface Props {
  title: string;
  img: string;
  imgAlt: string;
  date: string;
}

const { title, img, imgAlt, date } = Astro.props;
---

<article>
  <img src={img} alt={imgAlt} />
  <section>
    <h2><a href="#">{title}</a></h2>
    <time>{date}</time>
  </section>
</article>

<style>
  article {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 1rem;
    gap: 4.5rem;
    transition: transform 0.7s;
  }
  section {
    margin-left: 1rem;
  }
  img {
    border-radius: 10px;
  }
  time {
    color: #6c727f;
    font-weight: 500;
    font-size: 0.875rem;
  }
  h2 {
    font-weight: 600;
    font-size: 1.25rem;
  }
  a {
    text-decoration: none;
    color: #000;
  }
  article:hover {
    transform: scale(1.05);
    transition: transform 0.7s;
  }
  a:hover {
    opacity: 0.8;
    transition: opacity 0.7s;
  }
  @media screen and (max-width: 1024px) {
    article {
      gap: 3em;
    }
  }
  @media screen and (max-width: 640px) {
    article {
      gap: 3rem;
    }
    section {
      margin-left: 0;
    }
  }
</style>
